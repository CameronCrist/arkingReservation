# Private Parking Reservation V2 - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Private key for deployment (DO NOT COMMIT THE ACTUAL .env FILE!)
# Get from your MetaMask: Account Details -> Export Private Key
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Sepolia Testnet RPC URL
# Get free API key from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_api_key_here

# Zama FHEVM Network (for FHE testing)
FHEVM_RPC_URL=https://devnet.zama.ai

# =============================================================================
# BLOCKCHAIN EXPLORERS
# =============================================================================

# Etherscan API Key (for contract verification)
# Get free API key from: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# GAS REPORTING (Optional)
# =============================================================================

# Enable gas reporting in tests
REPORT_GAS=false

# CoinMarketCap API Key (for USD gas cost estimation)
# Get free API key from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Gas price multiplier for deployment (1.0 = normal, 1.5 = 50% higher)
GAS_PRICE_MULTIPLIER=1.0

# Maximum gas limit for deployment
MAX_GAS_LIMIT=8000000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Contract address (filled after deployment)
CONTRACT_ADDRESS=

# Gateway URL for FHE decryption
GATEWAY_URL=https://gateway.zama.ai

# Frontend server port
FRONTEND_PORT=3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Test account mnemonic (for local testing only)
# NEVER use this in production!
TEST_MNEMONIC=test test test test test test test test test test test junk

# =============================================================================
# NOTES
# =============================================================================
#
# 1. NEVER commit the actual .env file to version control
# 2. Add .env to your .gitignore file
# 3. Use different private keys for testnet and mainnet
# 4. Backup your private keys securely
# 5. For production, use hardware wallets or secure key management systems
# 6. Rotate API keys regularly
# 7. Monitor your wallet balances
#
# =============================================================================

